<!DOCTYPE html>
<html lang="en">

    <% include ../partials/head %>

<body>
    <% include ../partials/navbar %>
    <main id="feed">
        <div class="photo">
            <header class="photo__header">
                <img src="images/avatar.jpg" class="photo__avatar" />
                <div class="photo__user-info">
                    <span class="photo__author"> <%= image.User.username %> </span>
                    <span class="photo__location">Bekasi</span>
                </div>
            </header>
            <a href="#"><img height=auto width= 600 src="<%= image.path %>" /></a>
            <div class="photo__info">
                <div class="photo__actions">
                    <span class="photo__action">
                            <i class="fa fa-heart-o fa-lg"></i>
                        </span>
                    <span class="photo__action">
                            <i class="fa fa-comment-o fa-lg"></i>
                        </span>
                </div>
                <span class="photo__likes">45 likes</span>
                <% image.Comments.map(comment=>{ %>
                <ul class="photo__comments">
                    <li class="photo__comment">
                        <span class="photo__comment-author"> <a href="user/<%= comment.User.id%>"><%= comment.User.username %></a></span> <%= comment.text %>
                    </li>
                </ul>
           <% }) %>           
                <span class="photo__time-ago">2 hours ago</span>
                <div class="photo__add-comment-container">
                    <form action="" method="POST">
                    <input style="height: 40px; width:500px; border: none;" type = "text" name="text" placeholder="Add a commentaarr...">
                   
                  </form>
                    <i class="fa fa-ellipsis-h"></i>
                </div>
            </div>
        </div>
       
    </main>
    <% include ../partials/footer %>
</body>

</html>